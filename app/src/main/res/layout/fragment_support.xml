            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/background_grey"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
